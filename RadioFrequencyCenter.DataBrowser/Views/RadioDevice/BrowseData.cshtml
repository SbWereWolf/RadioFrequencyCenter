<div class="btn-group btn-group-lg">
    @Html.ActionLink("на главную", "Index", "Home", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Удалить все записи", "DeleteAllRecords", "RadioDevice", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Обновить", "BrowseData", "RadioDevice", null, new { @class = "btn btn-primary" })
</div>
<div>
    @{
        var isEmptyReocordSet = Model == null;
        if (!isEmptyReocordSet)
        {
            var count = Model.Count;
            if (count == 0)
            {
                isEmptyReocordSet = true;
            }
        }
        if (isEmptyReocordSet)
        {
            <p class="btn label-warning">no records found, try click button "Загрузить из источника" for add records from source</p>
        }
        else
        {
            <table class="table table-condensed table-hover table-bordered">
                <thead>
                    <tr>
                        <th class="ViewBroadcastStationRecord">
                            Подробности
                        </th>
                        <th class="DateSvid">
                            DateSvid
                        </th>
                        <th class="Lat">
                            Lat
                        </th>
                        <th class="Long">
                            Long
                        </th>
                        <th class="Mac">
                            Mac
                        </th>
                        <th class="NumSvid">
                            NumSvid
                        </th>
                        <th class="Region">
                            Region
                        </th>
                        <th class="SrokSvid">
                            SrokSvid
                        </th>
                        <th class="UpdateDate">
                            UpdateDate
                        </th>
                        <th class="ZavNum">
                            ZavNum
                        </th>
                        <th class="DelDate">
                            DelDate
                        </th>
                        <th class="IdRes">
                            IdRes
                        </th>
                        <th class="Ids">
                            Ids
                        </th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var record in Model)
                    {
                        if (record == null)
                        {
                            continue;
                        }
                        <tr>
                            <td class="RecordPage">
                                <div class="btn-group-sm">
                                    @Html.ActionLink("Открыть", "RecordPage", new { id = record.IdRes.ToString(), controller = "RadioDevice" }, new { @class = "btn btn-info" })
                                    <span class="btn btn-info" onclick="showPopup('/RadioDevice/RecordPopup/@record.IdRes');">Просмотр</span>
                                </div>
                            </td>
                            <td class="DateSvid">
                                @record.DateSvid
                            </td>
                            <td class="Lat">
                                @record.Lat
                            </td>
                            <td class="Long">
                                @record.Long
                            </td>
                            <td class="Mac">
                                @record.Mac
                            </td>
                            <td class="NumSvid">
                                @record.NumSvid
                            </td>
                            <td class="Region">
                                @record.Region
                            </td>
                            <td class="SrokSvid">
                                @record.SrokSvid
                            </td>
                            <td class="UpdateDate">
                                @record.UpdateDate
                            </td>
                            <td class="ZavNum">
                                @record.ZavNum
                            </td>
                            <td class="DelDate">
                                @record.DelDate
                            </td>
                            <td class="IdRes">
                                @record.IdRes
                            </td>
                            <td class="Ids">
                                @record.Ids
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    }
</div>

